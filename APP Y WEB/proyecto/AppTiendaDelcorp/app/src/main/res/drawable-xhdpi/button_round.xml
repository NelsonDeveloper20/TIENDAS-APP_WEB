<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#FF5605" />
            <gradient android:angle="-90" android:startColor="#FF5605"
                android:endColor="#182328"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF5605" />
            <solid android:color="#FF5605"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#FF5605" />
            <gradient android:angle="-90" android:startColor="#FFFFFF"
                android:endColor="#FF5605" />
        </shape>
    </item>
</selector>