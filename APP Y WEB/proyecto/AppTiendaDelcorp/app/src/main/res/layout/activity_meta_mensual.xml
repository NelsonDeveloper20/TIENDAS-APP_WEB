<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".activity.MetaMensualActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/imgAtras"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_back_black_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:id="@+id/txtTitulo"
                        android:text="Meta Mensual"
                        android:textSize="19dp"
                        android:textColor="@color/coloNegro"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.hookedonplay.decoviewlib.DecoView
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:id="@+id/dynamicArcView"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.5"
            android:gravity="center|top"
            android:paddingHorizontal="20dp"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:contentPaddingTop="10dp"
                app:contentPaddingRight="10dp"
                app:contentPaddingBottom="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:contentPaddingLeft="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorAmbar"
                        android:gravity="left|center"
                        android:text="Mes"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.5"
                        android:textSize="20dp"
                        android:id="@+id/txtMes"
                        android:text=" "
                        android:gravity="right|center"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorAmbar"
                        android:gravity="left|center"
                        android:text="Meta mensual"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1.5"
                        android:textSize="20dp"
                        android:id="@+id/txtMeta"
                        android:text="S/. 0"
                        android:gravity="right|center"
                        android:layout_height="match_parent" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:textColor="@color/colorAmbar"
                            android:gravity="left|center"
                            android:text="Ventas Realizadas"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1.5"
                            android:textSize="20dp"
                            android:text="0"
                            android:id="@+id/txtVentasRealizadas"
                            android:gravity="right|center"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:textColor="@color/colorAmbar"
                            android:gravity="left|center"
                            android:text="Monto Recaudado"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1.5"
                            android:id="@+id/txtMontoRecaudado"
                            android:textSize="20dp"
                            android:text="S/. 0"
                            android:gravity="right|center"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:textColor="@color/colorAmbar"
                            android:gravity="left|center"
                            android:text="Monto Faltante"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1.5"
                            android:id="@+id/txtMontoFaltante"
                            android:textSize="20dp"
                            android:text="S/. 0"
                            android:gravity="right|center"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>