<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="3.3"
                android:src="@drawable/noimagen"
                android:id="@+id/imagen"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:layout_height="70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNombre"
                    android:paddingVertical="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/colorAmbar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Descripcion del producto"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1 "
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/coloNegro"
                        android:layout_gravity="center"
                        android:id="@+id/txtCantidad"
                        android:layout_height="wrap_content"
                        android:text="Cant:"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1 "
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_gravity="center"
                        android:id="@+id/txtSugerido"
                        android:layout_height="wrap_content"
                        android:text="CantSug:"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1 "
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorRojo"
                        android:layout_gravity="center"
                        android:id="@+id/txtDiferencia"
                        android:layout_height="wrap_content"
                        android:text="Dif:"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPrecio"
                        android:paddingVertical="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text=" "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:id="@+id/txtSubtotal"
                        android:text=" "/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            android:visibility="visible"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <android.support.v7.widget.CardView
                                    android:layout_width="wrap_content"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content">
                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:background="#00000000"
                                                android:paddingHorizontal="5dp"
                                                android:paddingVertical="5dp"
                                                android:id="@+id/btnMenos"
                                                android:tint="@color/colorAccent"
                                                android:foreground="?android:attr/selectableItemBackground"
                                                android:clickable="true"
                                                android:src="@drawable/ic_remove_black_24dp"
                                                android:layout_height="wrap_content" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:paddingTop="0.8dp"
                                            android:paddingBottom="0.8dp"
                                            android:layout_height="match_parent">
                                            <android.support.v7.widget.CardView
                                                android:layout_width="match_parent"
                                                app:cardCornerRadius="5dp"
                                                app:cardElevation="0dp"
                                                app:cardBackgroundColor="@color/colorAccent"
                                                android:layout_height="match_parent">
                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:textSize="15dp"
                                                    android:id="@+id/txtCant"
                                                    android:gravity="center"
                                                    android:paddingHorizontal="20dp"
                                                    android:layout_gravity="center"
                                                    android:textColor="@color/coloNegro"
                                                    android:text="0"/>
                                            </android.support.v7.widget.CardView>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="#00000000"
                                                android:id="@+id/btnMas"
                                                android:paddingVertical="5dp"
                                                android:foreground="?android:attr/selectableItemBackground"
                                                android:clickable="true"
                                                android:paddingHorizontal="6dp"
                                                android:tint="@color/colorAccent"
                                                android:src="@drawable/ic_add_black_24dp"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:textSize="12dp"
                                    android:paddingHorizontal="10dp"
                                    android:id="@+id/txtStock"
                                    android:layout_gravity="center"
                                    android:textColor="@color/colorAccent"
                                    android:layout_height="match_parent"
                                    android:text="Stock "/>
                            </LinearLayout>



                        </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:id="@+id/btnBorrar"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:tint="@color/colorRojo"
                        android:src="@drawable/ic_delete_forever_black_24dp"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:id="@+id/btnEdit"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit_black_24dp"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#999898" />
</LinearLayout>
