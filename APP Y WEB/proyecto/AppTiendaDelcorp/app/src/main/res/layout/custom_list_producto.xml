<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNombre"
                android:paddingVertical="2dp"
                android:textSize="13dp"
                android:textColor="@color/colorAmbar"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Descripcion del producto"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrecio"
                android:paddingVertical="0dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/coloNegro"
                android:textStyle="bold"
                android:text="S/. 8.00 cu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtCategoria"
                android:paddingVertical="1dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorAmbarOscuro"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/colorAmbar"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:background="#00000000"
                                        android:paddingHorizontal="5dp"
                                        android:paddingVertical="5dp"
                                        android:id="@+id/btnMenos"
                                        android:tint="@color/colorAccent"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:src="@drawable/ic_remove_black_24dp"
                                        android:layout_height="match_parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:paddingTop="0.8dp"
                                    android:paddingBottom="0.8dp"
                                    android:layout_height="match_parent">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="@color/colorAccent"
                                        android:layout_height="match_parent">
                                      <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textSize="15dp"
                                            android:id="@+id/txtCant"
                                            android:gravity="center"
                                            android:paddingHorizontal="20dp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/coloNegro"
                                            android:text="0"/>

<!--
                                        <EditText
                                            android:id="@+id/txtCant"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textSize="15dp"
                                            android:ems="5"
                                            android:gravity="center"
                                            android:textColor="@color/coloNegro"
                                            android:inputType="number"
                                            android:background="@null"
                                            android:text="0"/>-->


                                    </android.support.v7.widget.CardView>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#00000000"
                                        android:id="@+id/btnMas"
                                        android:paddingVertical="5dp"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:paddingHorizontal="6dp"
                                        android:tint="@color/colorAccent"
                                        android:src="@drawable/ic_add_black_24dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:id="@+id/txtStock"
                            android:layout_gravity="center"
                            android:textColor="@color/colorAccent"
                            android:layout_height="match_parent"
                            android:text="Stock 100"/>
                    </LinearLayout>



                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:contentPaddingTop="8dp"
                    app:contentPaddingLeft="8dp"
                    app:cardElevation="0dp"
                    android:id="@+id/btnAgregar"
                    app:cardUseCompatPadding="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    app:contentPaddingBottom="8dp"
                    app:contentPaddingRight="8dp"
                    app:cardBackgroundColor="@color/coloVerde"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/colorAccent"
                        android:text="Agregar al carrito"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_weight="1.5"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_weight="1.5"
        android:src="@drawable/noimagen"
        android:id="@+id/imagen"  />
    <TextView
    android:layout_width="match_parent"
    android:id="@+id/txtCodigo"
    android:text=" "
    android:textSize="14dp"
    android:gravity="bottom|right"
    android:shadowColor="#FFF7F7"
    android:shadowRadius="4"
    android:textColor="#000000"
    android:layout_height="match_parent" />
</RelativeLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#999898" />
</LinearLayout>
