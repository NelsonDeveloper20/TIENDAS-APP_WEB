<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/noimagen"
                android:id="@+id/img"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:layout_height="55dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNomb"
                    android:paddingVertical="2dp"
                    android:textSize="12dp"
                    android:textColor="@color/colorAmbar"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Descripcion del producto"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="2dp"
                        android:layout_weight="1"
                        android:textSize="11dp"
                        android:textColor="@color/coloNegro"
                        android:gravity="center|right"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:text="Stock Restante :"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:paddingVertical="2dp"
                        android:textSize="11dp"
                        android:textColor="@color/coloNegro"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:id="@+id/txtCantidad"
                        android:layout_height="wrap_content"
                        android:text=" "/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/linearMod"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:textColor="@color/colorRojo"
                        android:layout_height="wrap_content"
                        android:text="SE MODIFICO POR VIGENCIA"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#999898" />
</LinearLayout>
